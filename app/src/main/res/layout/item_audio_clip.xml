<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Poignée de déplacement -->
        <ImageView
            android:id="@+id/btnItemDrag"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu_reorder" 
            android:alpha="0.5"
            android:contentDescription="Drag handle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            
            <TextView
                android:id="@+id/txtClipName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom Chronique"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Indicateurs visuels -->
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Script vide • Pas d'audio"
                android:textSize="12sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- 1. Script (Toujours actif) -->
        <ImageButton 
            android:id="@+id/btnItemScript" 
            android:layout_width="44dp" 
            android:layout_height="44dp" 
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_script" 
            android:background="?selectableItemBackgroundBorderless" 
            android:tooltipText="Éditer le script"
            android:contentDescription="Script"/>

        <!-- 2. Enregistrer (Micro) -->
        <ImageButton 
            android:id="@+id/btnItemRecord" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_record" 
            android:background="?selectableItemBackgroundBorderless" 
            android:tooltipText="Enregistrer l'audio"
            android:contentDescription="Record"/>

        <!-- 3. Éditer Audio (Visible seulement si audio existe) -->
        <ImageButton 
            android:id="@+id/btnItemEditAudio" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_edit" 
            android:background="?selectableItemBackgroundBorderless" 
            android:tooltipText="Couper/Monter"
            android:contentDescription="Edit Audio"/>
            
        <!-- 4. Options / Supprimer -->
        <ImageButton 
            android:id="@+id/btnItemDelete" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_delete" 
            android:background="?selectableItemBackgroundBorderless" 
            android:contentDescription="Delete"/>            

    </LinearLayout>
</androidx.cardview.widget.CardView>