<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0">

    <!-- En-tÃªte -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFF"
        android:elevation="2dp">
        
        <TextView 
            android:id="@+id/txtFilename" 
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:text="Fichier..."
            android:textColor="#000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/txtCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#2196F3"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#555"/>

            <TextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Zone Waveform avec Scroll Horizontal -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <HorizontalScrollView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <com.podcastcreateur.app.WaveformView
                android:id="@+id/waveformView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DDDDDD"/>
        </HorizontalScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- Barre d'outils -->
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center"
        android:background="#37474F">

        <!-- Re-Enregistrer -->
        <ImageButton 
            android:id="@+id/btnReRecord" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:src="@drawable/ic_record"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:tooltipText="Refaire l'enregistrement"/>

        <View android:layout_width="1dp" android:layout_height="30dp" android:background="#55FFFFFF" android:layout_marginHorizontal="6dp"/>

        <!-- Lecture -->
        <ImageButton 
            android:id="@+id/btnPlay" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:src="@drawable/ic_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

        <!-- Zoom Out -->
        <ImageButton 
            android:id="@+id/btnZoomOut" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:src="@drawable/ic_zoom_out"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="10dp"/>
            
        <!-- Zoom In -->
        <ImageButton 
            android:id="@+id/btnZoomIn" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:src="@drawable/ic_zoom_in"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

        <!-- Couper -->
        <ImageButton 
            android:id="@+id/btnCut" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:src="@drawable/ic_cut"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <!-- Normaliser -->
        <ImageButton 
            android:id="@+id/btnNormalize" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:src="@drawable/ic_normalize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <View android:layout_width="1dp" android:layout_height="30dp" android:background="#55FFFFFF" android:layout_marginHorizontal="6dp"/>

        <!-- Sauvegarder -->
        <ImageButton 
            android:id="@+id/btnSave" 
            android:layout_width="48dp" 
            android:layout_height="48dp" 
            android:src="@drawable/ic_save"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="10dp"/>
            
    </LinearLayout>
</LinearLayout>